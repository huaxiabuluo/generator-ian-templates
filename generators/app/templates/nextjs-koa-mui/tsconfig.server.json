{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2015",
    "outDir": "dist",
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false,
    "esModuleInterop": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    ".next"
  ]
}